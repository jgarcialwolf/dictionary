<div class="container">
  <h1>Edit the meaning of your word:</h1>

  <% if @meaning.errors.any? %>
    <h2>The following errors prevented the article from being saved:</h2>
    <ul>
      <% @meaning.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with(model: @meaning, local: true) do |f| %>
    <p>
      <%= f.label :english_word, class: "form-label" %>
      <%= f.text_field  :english_word, class: "form-control mb-3" %>
    </p>
    <p>
      <%= f.label :translation, class: "form-label" %>
      <%= f.text_field :translation, class: "form-control mb-3" %>
    </p>
    <p>
      <%= f.submit "Update Meaning", class: "btn btn-primary mt-3" %>
    </p>
  <% end %>
  <p>Cancel and return to <%= link_to "Meanings", meanings_path %></p>
</div>
