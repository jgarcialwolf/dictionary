<h1>Login</h1>

<%= form_with(scope: :session, url: login_path) do |f| %>

  <div>
    <%= f.label :email %>
    <%= f.email_field :email, placeholder: "Enter your email address" %>
  </div>

  <div>
    <%= f.label :password %>
    <%= f.password_field :password, placeholder: "Enter your password" %>
  </div>

  <div>
    <%= f.submit "Login" %>
  </div>
<% end %>

